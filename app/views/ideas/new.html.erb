<%= form_for(@idea) do |f| %>
<div class="field">
  <%= f.hidden_field :user_id, value: current_user.id %>
</div>
<div class="field">
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>


<%= f.select(:images, Image.all.collect { |i| [ i.link, i.id]}, {},{:multiple => true}) %>

<div class="field">
  <%= f.label :categories %>
  <%= f.collection_select(:category_id, Category.all, :id, :name) %>
</div>
<div class="actions">
  <%= f.submit %>
</div>
<% end %>
